{
  "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**/*.{ts,tsx,js,jsx,json}"],
    "maxSize": 5000000
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab",
    "includes": ["**/*.{ts,tsx,js,jsx,json}"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "recommended": true
      }
    },
    "domains": {
      "next": "all"
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "off"
      }
    }
  }
}
